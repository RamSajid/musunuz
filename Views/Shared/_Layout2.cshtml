            $('#showCity').hide();
            $('#showMarket').show();
        });

        $('#market').mouseout(function () {
            $('#showMarket').hide();
        });

        $('#showMarket').mouseout(function () {
            $('#showMarket').hide();
        });




        $('#category').mouseover(function () {
            $('#showCity').hide();
