            $('#showCategory').show();
        });

        $('#showCategory').mouseover(function () {
            $('#showCity').hide();
            $('#showMarket').hide();
            $('#showCategory').show();
        });

        $('#category').mouseout(function () {
            $('#showCategory').hide();
        });

        $('#showCategory').mouseout(function () {
            $('#showCategory').hide();
        });



        $('#revL').mouseover(function () {
            $('#revList').show();
        });

        $('#revList').mouseover(function () {
            $('#revList').show();
        });

        $('#revL').mouseout(function () {
            $('#revList').hide();
        });

        $('#revList').mouseout(function () {
            $('#revList').hide();
        });



        $('#rateL').mouseover(function () {
            $('#rateList').show();
        });

        $('#rateList').mouseover(function () {
            $('#rateList').show();
        });

        $('#rateL').mouseout(function () {
            $('#rateList').hide();
        });

        $('#rateList').mouseout(function () {
            $('#rateList').hide();
        });



        $('#comL').mouseover(function () {
            $('#comList').show();
        });

        $('#comList').mouseover(function () {
            $('#comList').show();
        });

        $('#comL').mouseout(function () {
            $('#comList').hide();
        });

        $('#comList').mouseout(function () {
            $('#comList').hide();
        });



        $('#signL').mouseover(function () {
            $('#signList').show();
        });

        $('#signList').mouseover(function () {
            $('#signList').show();
        });

        $('#signL').mouseout(function () {
            $('#signList').hide();
        });

        $('#signList').mouseout(function () {
            $('#signList').hide();
        });




        $('#aL').mouseover(function () {
            $('#aList').show();
        });

        $('#aList').mouseover(function () {
            $('#aList').show();
        });

        $('#aL').mouseout(function () {
            $('#aList').hide();
        });

        $('#aList').mouseout(function () {
            $('#aList').hide();
        });


        $('#changeL').mouseover(function () {
            $('#changeList').show();
        });

        $('#changeList').mouseover(function () {
            $('#changeList').show();
        });

        $('#changeL').mouseout(function () {
            $('#changeList').hide();
        });

        $('#changeList').mouseout(function () {
            $('#changeList').hide();
        });

    });

</script>
