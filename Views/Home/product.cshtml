        $('#s2').mouseover(function () {
            $('#s1').attr("src", "../img/star.png");
            $('#s2').attr("src", "../img/star.png");
            $('#s3').attr("src", "../img/hollowStar.png");
            $('#s4').attr("src", "../img/hollowStar.png");
            $('#s5').attr("src", "../img/hollowStar.png");
            rat = 2;
        });

        $('#s3').mouseover(function () {
            $('#s1').attr("src", "../img/star.png");
            $('#s2').attr("src", "../img/star.png");
            $('#s3').attr("src", "../img/star.png");
            $('#s4').attr("src", "../img/hollowStar.png");
            $('#s5').attr("src", "../img/hollowStar.png");
            rat = 3;
        });

        $('#s4').mouseover(function () {
            $('#s1').attr("src", "../img/star.png");
            $('#s2').attr("src", "../img/star.png");
            $('#s3').attr("src", "../img/star.png");
            $('#s4').attr("src", "../img/star.png");
            $('#s5').attr("src", "../img/hollowStar.png");
            rat = 4;
        });

        $('#s5').mouseover(function () {
            $('#s1').attr("src", "../img/star.png");
            $('#s2').attr("src", "../img/star.png");
            $('#s3').attr("src", "../img/star.png");
            $('#s4').attr("src", "../img/star.png");
            $('#s5').attr("src", "../img/star.png");
            rat = 5;
        });

        $('#postIt').click(function () {
            var uu = $('#userII').val();
            var ss = $('#storeII').val();
            var pp = $('#prodII').val();
            if (uu != 0) {
                var review = $('#review').val();
                var rating = rat;
                $.getJSON("/Home/postproductReview?uId=" + uu + "&" + "sId=" + ss + "&" + "review=" + review + "&" + "rating=" + rating + "&" + "pId=" + pp, function (data) {
                    $('#hPp').hide();
                    $('#userM').empty();
                    $('#userM').show();
                    $('#review').val("");
                    $('#s1').attr("src", "../img/hollowStar.png");
                    $('#s2').attr("src", "../img/hollowStar.png");
                    $('#s3').attr("src", "../img/hollowStar.png");
                    $('#s4').attr("src", "../img/hollowStar.png");
                    $('#s5').attr("src", "../img/hollowStar.png");
                    $('#userM').load('product/' + pp);
                });
            }
            else {
                //$('#sideBar').hide();
                //$('#userM').empty();
                //$('#userM').show();
                //$('#userM').load('signIn');
                $('#hPp').empty();
                $('#hPp').show();
                $('#review').val("");
                $('#s1').attr("src", "../img/hollowStar.png");
                $('#s2').attr("src", "../img/hollowStar.png");
                $('#s3').attr("src", "../img/hollowStar.png");
                $('#s4').attr("src", "../img/hollowStar.png");
                $('#s5').attr("src", "../img/hollowStar.png");
                $('#hPp').append('Please SignIn to post a review.');
            }

        });
    });

</script>