                $(document).ready(function () {
                    $('#@cIc').click(function () {
                            $('#pDiv').hide();
                            $('#loadPageP').empty();
                            $('#loadPageP').show();
                            $('#loadPageP').load('category/@cI');
                    });

                    $('#@sIs').click(function () {
                        $('#pDiv').hide();
                        $('#loadPageP').empty();
                        $('#loadPageP').show();
                        $('#loadPageP').load('store/@sI');
                    });

    });
    </script>

</div>

